  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <script>
    const SUPABASE_URL = 'https://trmopsmshuoelxbzvnyx.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRybW9wc21zaHVvZWx4Ynp2bnl4Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjU1OTk3OTEsImV4cCI6MjA4MTE3NTc5MX0.U1oq80EbFFUPbVa2NQqU6Ezjq-04rDZCDBqJOkUGcMs';

    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

    const brandColors = {
      'The Piano Place': 'linear-gradient(135deg, #4fc3c7, #6dd5d9)',
      'Gwinnett School of Music': 'linear-gradient(135deg, #9b87f5, #b5a3ff)',
      'Music Learning Center': 'linear-gradient(135deg, #5b9cff, #7eb3ff)',
      'Arts Academy': 'linear-gradient(135deg, #ffab73, #ffc499)',
      'Hoffman School of Music': 'linear-gradient(135deg, #ff7eb9, #ffa3d0)',
      'Champaign School of Music': 'linear-gradient(135deg, #6fdc8c, #8fe9a4)',
      'South Loop School of Music': 'linear-gradient(135deg, #ff7eb9, #ffa3d0)',
      'Flourish Music Academy': 'linear-gradient(135deg, #4fc3c7, #6fdc8c)',
      'Greater Austin Music Academy': 'linear-gradient(135deg, #9b87f5, #ff7eb9)',
      'Vancouver Music Academy': 'linear-gradient(135deg, #5b9cff, #9b87f5)',
      'default': 'linear-gradient(135deg, #4fc3c7, #6dd5d9)'
    };

    let allStudios = [];
    let filteredStudios = [];

    checkAuth();

    async function checkAuth() {
      const { data: { session } } = await supabase.auth.getSession();
      if (!session) {
        window.location.href = 'login.html';
        return;
      }
      const email = session.user.email;
      document.getElementById('userName').textContent = email.split('@')[0];
      document.getElementById('userAvatar').textContent = email.charAt(0).toUpperCase();
      loadStudios();
    }

    async function loadStudios() {
      try {
        const { data: studios, error } = await supabase.from('studios').select('*').order('name', { ascending: true });
        if (error) throw error;
        allStudios = studios;
        filteredStudios = studios;
        const uniqueStates = [...new Set(studios.map(s => s.state))].filter(Boolean).sort();
        const stateFilter = document.getElementById('stateFilter');
        stateFilter.innerHTML = '<option value="">All States</option>';
        uniqueStates.forEach(state => {
          stateFilter.appendChild(Object.assign(document.createElement('option'), {value: state, textContent: state}));
        });
        updateCityDropdown();
        displayStudios();
        updateResultsCount();
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('studiosGrid').innerHTML = `<div class="empty-state"><p style="color: #EF4444;">Error: ${error.message}</p></div>`;
      }
    }

    function getBrandColor(studioName) {
      for (let brand in brandColors) {
        if (studioName && studioName.includes(brand)) {
          return brandColors[brand];
        }
      }
      const colors = Object.values(brandColors);
      const index = allStudios.findIndex(s => s.name === studioName) % (colors.length - 1);
      return colors[index] || brandColors.default;
    }

    function displayStudios() {
      const grid = document.getElementById('studiosGrid');
      const emptyState = document.getElementById('emptyState');
      if (filteredStudios.length === 0) {
        grid.style.display = 'none';
        emptyState.style.display = 'block';
        return;
      }
      grid.style.display = 'grid';
      emptyState.style.display = 'none';
      grid.innerHTML = filteredStudios.map(studio => `
        <div class="studio-card" onclick="openModal('${studio.id}')">
          <div class="studio-header" style="background: ${getBrandColor(studio.name)}">
            <div class="studio-name">${studio.name}</div>
            <div class="studio-location">${studio.city}, ${studio.state}</div>
          </div>
          <div class="studio-body">
            <div class="studio-info">
              <div class="info-row">
                <div class="info-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                </div>
                <div class="info-content">
                  <div class="info-label">Address</div>
                  <div class="info-value">${studio.address || 'N/A'}</div>
                </div>
              </div>
              <div class="info-row">
                <div class="info-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                </div>
                <div class="info-content">
                  <div class="info-label">Phone</div>
                  <div class="info-value">${studio.phone || 'N/A'}</div>
                </div>
              </div>
              ${studio.director ? `
              <div class="info-row">
                <div class="info-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                </div>
                <div class="info-content">
                  <div class="info-label">Director</div>
                  <div class="info-value">${studio.director}</div>
                </div>
              </div>
              ` : ''}
            </div>
            ${getTagsHtml(studio)}
            <div class="studio-actions">
              <button class="btn-small btn-view" onclick="event.stopPropagation(); openModal('${studio.id}');">View Details</button>
            </div>
          </div>
        </div>
      `).join('');
    }

    function getTagsHtml(studio) {
      const tags = [];
      if (studio.juniors_program) tags.push('Juniors Program');
      if (studio.other_programs) tags.push('Other Programs');
      if (studio.rentals_offered) tags.push('Rentals');
      if (tags.length === 0) return '';
      return `<div class="studio-tags">${tags.slice(0, 3).map(tag => `<span class="tag">${tag}</span>`).join('')}</div>`;
    }

    function openModal(studioId) {
      const studio = allStudios.find(s => s.id === studioId);
      if (!studio) return;
      const modal = document.getElementById('detailModal');
      const modalHeader = modal.querySelector('.modal-header');
      modalHeader.style.background = getBrandColor(studio.name);
      document.getElementById('modalTitle').textContent = studio.name;
      document.getElementById('modalSubtitle').textContent = `${studio.city}, ${studio.state}`;
      document.getElementById('modalBody').innerHTML = `
        <div class="detail-section">
          <div class="section-title">
            <span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg></span>
            Essential Information
          </div>
          <div class="detail-grid">
            <div class="detail-item"><div class="detail-label">Address</div><div class="detail-value">${studio.address || 'N/A'}</div></div>
            <div class="detail-item"><div class="detail-label">City, State ZIP</div><div class="detail-value">${studio.city}, ${studio.state} ${studio.zip || ''}</div></div>
            <div class="detail-item"><div class="detail-label">Phone</div><div class="detail-value">${studio.phone || 'N/A'}</div></div>
            <div class="detail-item"><div class="detail-label">Email</div><div class="detail-value">${studio.email || 'N/A'}</div></div>
            ${studio.director ? `<div class="detail-item"><div class="detail-label">Director</div><div class="detail-value">${studio.director}</div></div>` : ''}
          </div>
        </div>
        ${(studio.annual_fee || studio.price_30min || studio.price_45min || studio.price_60min) ? `
        <div class="detail-section">
          <div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg></span>Pricing</div>
          <div class="pricing-cards">
            ${studio.annual_fee ? `<div class="pricing-card"><div class="pricing-duration">Annual Fee</div><div class="pricing-amount">${studio.annual_fee}</div></div>` : ''}
            ${studio.price_30min ? `<div class="pricing-card"><div class="pricing-duration">30 Minutes</div><div class="pricing-amount">${studio.price_30min}</div></div>` : ''}
            ${studio.price_45min ? `<div class="pricing-card"><div class="pricing-duration">45 Minutes</div><div class="pricing-amount">${studio.price_45min}</div></div>` : ''}
            ${studio.price_60min ? `<div class="pricing-card"><div class="pricing-duration">60 Minutes</div><div class="pricing-amount">${studio.price_60min}</div></div>` : ''}
          </div>
        </div>` : ''}
        ${studio.new_student_materials ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg></span>New Student Materials</div><div class="detail-text">${studio.new_student_materials}</div></div>` : ''}
        ${(studio.juniors_program || studio.other_programs) ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg></span>Programs Available</div><div class="badge-list">${studio.juniors_program ? `<span class="badge">Juniors Program</span>` : ''}${studio.other_programs ? `<span class="badge">Other Programs</span>` : ''}</div>${(studio.juniors_link || studio.other_programs_link) ? `<div style="margin-top: 12px; display: flex; gap: 8px; flex-wrap: wrap;">${studio.juniors_link ? `<a href="${studio.juniors_link}" target="_blank" class="link-button">Juniors Info</a>` : ''}${studio.other_programs_link ? `<a href="${studio.other_programs_link}" target="_blank" class="link-button">Programs Info</a>` : ''}</div>` : ''}</div>` : ''}
        ${studio.rentals_offered ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg></span>Instrument Rentals</div><div class="badge-list"><span class="badge">Rentals Available</span></div>${studio.rentals_link ? `<div style="margin-top: 12px;"><a href="${studio.rentals_link}" target="_blank" class="link-button">Rentals Info</a></div>` : ''}</div>` : ''}
        ${studio.custom_links && studio.custom_links.length > 0 ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg></span>Quick Links</div><div style="display: flex; gap: 8px; flex-wrap: wrap;">${studio.custom_links.map(link => `<a href="${link.url}" target="_blank" class="link-button">${link.title}</a>`).join('')}</div></div>` : ''}
        ${(studio.parking || studio.landmarks || studio.age_requirements || studio.studio_notes) ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4"></path><path d="M12 8h.01"></path></svg></span>Additional Information</div>${studio.parking ? `<div class="detail-item" style="margin-bottom: 12px;"><div class="detail-label">Parking</div><div class="detail-text">${studio.parking}</div></div>` : ''}${studio.landmarks ? `<div class="detail-item" style="margin-bottom: 12px;"><div class="detail-label">Landmarks</div><div class="detail-text">${studio.landmarks}</div></div>` : ''}${studio.age_requirements ? `<div class="detail-item" style="margin-bottom: 12px;"><div class="detail-label">Age Requirements</div><div class="detail-text">${studio.age_requirements}</div></div>` : ''}${studio.studio_notes ? `<div class="detail-item"><div class="detail-label">Notes</div><div class="detail-text">${studio.studio_notes}</div></div>` : ''}</div>` : ''}
        ${studio.previous_pricing && studio.previous_pricing.length > 0 ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg></span>Previous Pricing</div>${studio.previous_pricing.map(p => `<div class="detail-item" style="margin-bottom: 8px;"><div class="detail-label">${p.date || 'Historical'}</div><div class="detail-text">${p.details || p.pricing || ''}</div></div>`).join('')}</div>` : ''}
        ${studio.studio_admins && studio.studio_admins.length > 0 ? `<div class="detail-section"><div class="section-title"><span class="section-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg></span>Studio Administrators</div><div class="badge-list">${studio.studio_admins.map(admin => `<span class="badge">${admin.name || admin.email || admin}</span>`).join('')}</div></div>` : ''}
      `;
      modal.classList.add('active');
    }

    function closeModal() {
      document.getElementById('detailModal').classList.remove('active');
    }

    function updateCityDropdown() {
      const stateFilter = document.getElementById('stateFilter').value;
      const citySelect = document.getElementById('cityFilter');
      let availableCities = allStudios;
      if (stateFilter) availableCities = availableCities.filter(s => s.state === stateFilter);
      const cities = [...new Set(availableCities.map(s => s.city))].filter(Boolean).sort();
      citySelect.innerHTML = '<option value="">All Cities</option>' + cities.map(city => `<option value="${city}">${city}</option>`).join('');
    }

    function renderCityPills() {
      const stateFilter = document.getElementById('stateFilter').value;
      const cityFilter = document.getElementById('cityFilter').value;
      const pillsSection = document.getElementById('cityPillsSection');
      const pillsContainer = document.getElementById('cityPills');
      if (!stateFilter) {
        pillsSection.style.display = 'none';
        return;
      }
      let availableStudios = allStudios.filter(s => s.state === stateFilter);
      const cityCounts = {};
      availableStudios.forEach(studio => {
        cityCounts[studio.city] = (cityCounts[studio.city] || 0) + 1;
      });
      const cities = Object.keys(cityCounts).sort();
      if (cities.length === 0) {
        pillsSection.style.display = 'none';
        return;
      }
      pillsSection.style.display = 'block';
      pillsContainer.innerHTML = cities.map(city => `<button class="city-pill ${cityFilter === city ? 'active' : ''}" onclick="selectCityPill('${city}')"><span>${city}<span class="city-pill-count">${cityCounts[city]}</span></span></button>`).join('');
    }

    function selectCityPill(city) {
      const citySelect = document.getElementById('cityFilter');
      citySelect.value = (citySelect.value === city) ? '' : city;
      filterStudios();
    }

    function filterStudios() {
      const stateFilter = document.getElementById('stateFilter').value;
      const cityFilter = document.getElementById('cityFilter').value;
      const searchQuery = document.getElementById('searchInput').value.toLowerCase();
      filteredStudios = allStudios.filter(studio => {
        const matchesState = !stateFilter || studio.state === stateFilter;
        const matchesCity = !cityFilter || studio.city === cityFilter;
        const matchesSearch = !searchQuery || 
          (studio.name && studio.name.toLowerCase().includes(searchQuery)) ||
          (studio.city && studio.city.toLowerCase().includes(searchQuery)) ||
          (studio.state && studio.state.toLowerCase().includes(searchQuery)) ||
          (studio.director && studio.director.toLowerCase().includes(searchQuery));
        return matchesState && matchesCity && matchesSearch;
      });
      updateCityDropdown();
      renderCityPills();
      updateResultsCount();
      displayStudios();
    }

    function updateResultsCount() {
      document.getElementById('resultsCount').textContent = filteredStudios.length;
    }

    function clearFilters() {
      document.getElementById('searchInput').value = '';
      document.getElementById('stateFilter').value = '';
      document.getElementById('cityFilter').value = '';
      filterStudios();
    }

    function toggleSidebar() {
      const sidebar = document.querySelector('.sidebar');
      const mainContent = document.querySelector('.main-content');
      const overlay = document.querySelector('.sidebar-overlay');
      if (window.innerWidth <= 1024) {
        sidebar.classList.toggle('open');
        overlay.classList.toggle('show');
      } else {
        sidebar.classList.toggle('collapsed');
        mainContent.classList.toggle('expanded');
      }
    }

    async function logout() {
      await supabase.auth.signOut();
      window.location.href = 'login.html';
    }

    document.getElementById('searchInput').addEventListener('input', filterStudios);
    document.getElementById('stateFilter').addEventListener('change', filterStudios);
    document.getElementById('cityFilter').addEventListener('change', filterStudios);
    document.getElementById('resetFilters').addEventListener('click', clearFilters);
    document.querySelector('.sidebar-overlay').addEventListener('click', function() {
      if (window.innerWidth <= 1024) toggleSidebar();
    });
    document.getElementById('detailModal').addEventListener('click', (e) => {
      if (e.target.id === 'detailModal') closeModal();
    });
  </script>

</body>
</html>
